#!/usr/bin/env bash

set -e

mkdir -p examples/build/js/
mkdir -p examples/build/css/

npx concurrently --kill-others \
  --prefix='name' \
  --names='watch-js   ,http-server' \
  --prefix-colors='red,green' \
  'npx watchify -d -t babelify examples/src/js/index.js -o examples/build/js/index.js -v' \
  'npx http-server -c-0 examples/ -o'
